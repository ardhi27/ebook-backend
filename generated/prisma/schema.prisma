generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement())
  username String @db.VarChar(50)
  password String
}

model BooksCategory {
  categoryId Int    @id @default(autoincrement())
  category   String
}
